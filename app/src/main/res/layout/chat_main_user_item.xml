<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<ImageView
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:id="@+id/chat_main_user_profile_image"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="10dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Yumashish Yonghang Subba"
    android:id="@+id/chat_main_user_profile_name_label"
    android:padding="10dp"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/chat_main_user_profile_image"
    android:layout_toEndOf="@+id/chat_main_user_profile_image" />
</RelativeLayout>