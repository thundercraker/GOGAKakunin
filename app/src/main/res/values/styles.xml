<resources>

    <style name="NoTitleWithActionBarLight" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#ddd</item>
        <item name="android:popupBackground">#333</item>
        <item name="android:background">#333</item>
        <item name="android:colorBackground">#333</item>


        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>
